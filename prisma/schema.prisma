generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Simple User model for advertiser authentication
model User {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  name          String?
  email         String   @unique
  passwordHash  String
  
  // Relations
  ads           Ad[]
}

// Ad model for storing advertiser campaigns
model Ad {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  title         String?
  about         String?
  ctaUrl        String?
  mediaType     String   // 'image' or 'video'
  mediaUrl      String   // URL to uploaded file
  hideFromTime  String?  // Time to hide ad (HH:MM format)
  hideToTime    String?  // Time to show ad again (HH:MM format)
  isActive      Boolean  @default(true)
  
  // Relations
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  positions     AdPosition[]
}

// Grid positions for ads
model AdPosition {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  
  x             Int      // grid X coordinate
  y             Int      // grid Y coordinate
  
  // Relations
  adId          String
  ad            Ad       @relation(fields: [adId], references: [id], onDelete: Cascade)
  
  @@unique([x, y, adId]) // Prevent duplicate positions for same ad
}
